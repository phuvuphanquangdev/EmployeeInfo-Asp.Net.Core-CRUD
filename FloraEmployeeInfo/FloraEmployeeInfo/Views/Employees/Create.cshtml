@model FloraEmployeeInfo.Models.Employee
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col">

        <h2>Add New Employee</h2>
        <div id="panel"></div>

        <form id="frmCreate"
              asp-action="Create"
              asp-controller="Employees"
              data-ajax-method="Post"
              data-ajax="true"
              data-ajax-mode="replace"
              data-ajax-update="#panel"
              data-ajax-success="success">

            <div class="row mb-2">
                <label class="col-form-label col-2" asp-for="EmployeeName">@Html.DisplayNameFor(x => x.EmployeeName)</label>
                <div class="col-md-6">
                    <input class="form-control" type="text" asp-for="EmployeeName" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <label class="col-form-label col-2" asp-for="DepartmentId">@Html.DisplayNameFor(x => x.DepartmentId)</label>
                <div class="col-md-6">
                    <select class="form-control" asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.departments,"DepartmentId","DepartmentName"))">
                        <option value="0" selected="selected">----Select-----</option>
                    </select>
                </div>
                <div class="col-4">
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-2">
                <label class="col-form-label col-2" asp-for="DesignationId">@Html.DisplayNameFor(x => x.DesignationId)</label>
                <div class="col-md-6">
                    <select class="form-control" asp-for="DesignationId" asp-items="@(new SelectList(ViewBag.designations,"DesignationId","DesignationName"))">
                        <option value="0" selected="selected">----Select-----</option>
                    </select>
                </div>
                <div class="col-4">
                    <span asp-validation-for="DesignationId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <label class="col-form-label col-2" asp-for="Email">@Html.DisplayNameFor(x => x.Email)</label>
                <div class="col-md-6">
                    <input class="form-control" type="text" asp-for="Email" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <label class="col-form-label col-2" asp-for="Phone">@Html.DisplayNameFor(x => x.Phone)</label>
                <div class="col-md-6">
                    <input class="form-control" type="text" asp-for="Phone" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <label class="col-form-label col-2" asp-for="JoinDate">@Html.DisplayNameFor(x => x.JoinDate)</label>
                <div class="col-md-6">
                    <input class="form-control" type="date" asp-for="JoinDate" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="JoinDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>

        </form>
        <div class="row">
            <div class="col-6">
                <a asp-action="Index" asp-controller="Employees" class="btn btn-info">Back To List</a>
            </div>
        </div>
    </div>
    

</div>

@section scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/ajax/dist/jquery.unobtrusive-ajax.js"></script>

    <script type="text/javascript">
        $("#frmCreate").attr("enctype", "multipart/form-data")
        function success() {
            $("#frmCreate").trigger('reset')
        }
    </script>
}